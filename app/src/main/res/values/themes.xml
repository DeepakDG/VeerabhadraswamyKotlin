<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Veerabhadreshwaramantra" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dianne</item>
        <item name="colorPrimaryVariant">@color/navy_900</item>
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionMenuTextColor">@color/white</item>

        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Veerabhadreshwaramantra.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Veerabhadreshwaramantra.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Veerabhadreshwaramantra.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.ColorPickerExample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="buttonBarNegativeButtonStyle">@android:color/white</item>
    </style>
</resources>